  <script>
    const artifactData = {
      "(1,1)": { flakes: 3, sherds: 0, points: 0, charcoal: 1, bones: 0 },
      "(1,2)": { flakes: 2, sherds: 1, points: 0, charcoal: 0, bones: 1 },
      "(1,3)": { flakes: 1, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(1,4)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(1,5)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(2,1)": { flakes: 4, sherds: 0, points: 1, charcoal: 0, bones: 0 },
      "(2,2)": { flakes: 1, sherds: 2, points: 0, charcoal: 0, bones: 0 },
      "(2,3)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(2,4)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(2,5)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(3,1)": { flakes: 2, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(3,2)": { flakes: 1, sherds: 1, points: 0, charcoal: 0, bones: 0 },
      "(3,3)": { flakes: 0, sherds: 0, points: 2, charcoal: 1, bones: 1 },
      "(3,4)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(3,5)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(4,1)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(4,2)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(4,3)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(4,4)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(4,5)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(5,1)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(5,2)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(5,3)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(5,4)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 },
      "(5,5)": { flakes: 0, sherds: 0, points: 0, charcoal: 0, bones: 0 }
    };

    const artifactImages = {
      flakes: "ü™®",
      sherds: "üè∫",
      points: "üìå",
      charcoal: "üî•",
      bones: "ü¶¥"
    };

    const grid = document.getElementById("grid");
    const journal = document.getElementById("journal");
    const summaryList = document.getElementById("summaryList");
    let journalEntries = [];
    let excavatedCount = 0;

    for (let y = 0; y < 5; y++) {
      for (let x = 0; x < 5; x++) {
        const coord = `(${x+1},${y+1})`;
        const cell = document.createElement("div");
        cell.className = "cell";
        cell.dataset.coord = coord;
        cell.onclick = () => excavate(cell);
        grid.appendChild(cell);
      }
    }

    function excavate(cell) {
      if (cell.textContent) return;
      const coord = cell.dataset.coord;
      const data = artifactData[coord];
      cell.textContent = "‚õèÔ∏è";
      excavatedCount++;

      if (data) {
        let entry = `Grid ${coord}: `;
        let visuals = "";
        for (let key in data) {
          if (data[key] > 0) {
            entry += `${key}=${data[key]}, `;
            visuals += `${artifactImages[key]} x${data[key]} `;
          }
        }
        entry = entry.slice(0, -2);
        journalEntries.push(entry);
        journal.innerHTML += `<div>${visuals}<br>${entry}</div>`;
      } else {
        const entry = `Grid ${coord}: No artifacts found.`;
        journalEntries.push(entry);
        journal.innerHTML += `<div>${entry}</div>`;
      }

      updateDashboard();
    }

    function updateDashboard() {
      summaryList.innerHTML = `
        <li>Total grid units excavated: ${excavatedCount}</li>
        <li>Journal entries recorded: ${journalEntries.length}</li>
      `;
    }

    function downloadJournal() {
      const blob = new Blob([journalEntries.join("\n")], { type: "text/plain" });
      const link = document.createElement("a");
      link.href = URL.createObjectURL(blob);
      link.download = "dig_journal.txt";
      link.click();
    }
  </script>
